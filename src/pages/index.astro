---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import solmobile from "../assets/images/sol_mobile.svg";
import Card from "../components/Card.astro";
import stemning1 from "../assets/images/stemning1.jpg";
import stemning2 from "../assets/images/stemning2.jpg";
import stemning3 from "../assets/images/stemning3.jpg";
import stemning4 from "../assets/images/stemning4.jpg";
import stemning5 from "../assets/images/stemning5.jpg";
import stemning6 from "../assets/images/stemning6.jpg";
import stemning7 from "../assets/images/stemning7.jpg";
import stemning8 from "../assets/images/stemning8.jpg";
import stemning9 from "../assets/images/stemning9.jpg";
import stemning10 from "../assets/images/stemning10.jpg";
import stemning11 from "../assets/images/stemning11.jpg";
import stemning12 from "../assets/images/stemning12.jpg";
import infobillede from "../assets/images/infobillede.jpg";
import storinfobillede from "../assets/images/storinfobillede.jpg";
import ligeværd from "../assets/images/ligeværd.jpg";
import integritet from "../assets/images/integritet.jpg";
import mod from "../assets/images/mod.jpg";
import fællesskab from "../assets/images/fællesskab.jpg";
import trustpilot1 from "../assets/images/trustpilot1.jpg";
import trustpilot2 from "../assets/images/trustpilot2.jpg";
import trustpilot3 from "../assets/images/trustpilot3.jpg";
import trustpilot4 from "../assets/images/trustpilot4.jpg";
import palme from "../assets/images/palme.png";
---

<MainLayout title="Titel">
  <article>
    <section id="hero">
      <h1
        class="font-acme text-h1_mobil text-blaa-300 lg:text-h1_desk grid justify-items-center"
      >
        HØJSKOLE I UDLANDET
      </h1>
      <h2
        class="font-inter text-h2_mobil font-bold text-blaa-300 lg:text-h2_desk grid justify-items-center"
      >
        EVENTYRLIGE HØJSKOLEOPHOLD I UDLANDET FOR UNGE
      </h2>
    </section>

    <section class="px-lg lg:px-2xl pt-m">
      <h2
        class="font-inter text-h2_mobil font-bold lg:text-h2_desk pt-lg text-blaa-950 lg:grid lg:justify-items-center"
      >
        SKAB MINDER FOR LIVET - KOM PÅ HØJSKOLEEVENTYR!
      </h2>
      <div class="lg:grid lg:grid-cols-2 pt-s">
        <p class="font-inter text-p_mobil lg:text-p_desk text-blaa-950">
          Tag på højskole i udlandet og oplev verden på en helt ny måde! Hos
          HÖJSKOLENDK kombinerer vi rejseeventyr, fællesskab og spændende
          undervisning for unge mellem 18-30 år. Forestil dig fællesskab, nye
          venner, fantastiske landskaber og spændende kulturer, der sætter spor
          for livet.
        </p>
        <p class="font-inter text-p_mobil lg:text-p_desk text-blaa-950">
          Med os er du sikret uforglemmelige oplevelser, stærke venskaber og
          tryghed hele vejen – vi er medlem af Rejsegarantifonden. Bliv
          underholdt, udvikl dig og skab minder, der varer for evigt. Vi glæder
          os til at tage dig med på dit livs rejse!
        </p>
      </div>
      <Image
        src={solmobile}
        class="mx-auto pb-xl pt-s lg:w-lg"
        alt="billede af sol"
      />
    </section>

    <section class="pb-lg px-lg lg:px-2xl" id="rejser">
      <h2
        class="grid justify-items-center pb-8 font-inter text-h2_mobil font-bold lg:text-h2_desk"
      >
        VORES REJSER
      </h2>
      <div class="grid grid-cols-2 gap-xs">
        <Card
