  <script>
    function toggleAnswer(answerId) {
      // Find det tilhørende svar og ikon
      const answer = document.getElementById(answerId);
      const icon = document.querySelector(`#icon${answerId.slice(-1)}`);

      // Tjek om svaret allerede er synligt
      if (answer.classList.contains("hidden")) {
        // Skjul alle andre svar
        document
          .querySelectorAll(".hidden")
          .forEach((el) => el.classList.add("hidden"));
        document.querySelectorAll(".transform").forEach((el) => {
          el.style.transform = "rotate(0deg)";
        });

        // Vis det valgte svar
        answer.classList.remove("hidden");
        icon.style.transform = "rotate(180deg)";
      } else {
        // Skjul det aktuelle svar
        answer.classList.add("hidden");
        icon.style.transform = "rotate(0deg)";
      }
    }
  </script>
